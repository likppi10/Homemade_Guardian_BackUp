<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_505050"
    android:minHeight="?attr/actionBarSize"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    android:id="@+id/toolbar_title_modify"
    >

    <ImageView
        android:id="@+id/back_Button"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/back_button_white"
        />

    <LinearLayout
        android:id="@+id/camera_Button_Layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/camera_Button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/camera"/>

        <TextView
            android:id="@+id/camera_Select_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="0/5"/>


    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수정하기"
        android:layout_gravity="center"
        android:id="@+id/toolbar_titles"
        android:textSize="20sp"
        android:textColor="@color/color_ffffff"
        />

    <Button
        android:id="@+id/Write_Register_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="등록"
        android:layout_gravity="right"
        android:background="@color/color_505050"
        android:textColor="#ffffff"
        android:shadowRadius="?attr/colorPrimary"
        style="@style/Widget.AppCompat.Button.Borderless"/>

</androidx.appcompat.widget.Toolbar>