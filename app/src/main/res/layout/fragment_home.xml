<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main.bottombar.HomeFragment"

    android:orientation="vertical">

    <include
        layout="@layout/view_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/toolbar"
        android:id="@+id/Linearlayout">

        <Button
            android:id="@+id/searchbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="검색" />

        <Button
        android:id="@+id/HotPostbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="핫게시판" />

        <Button
            android:id="@+id/AllPostbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전체" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/Linearlayout"
        android:id="@+id/Categorylayout">



        <Button
            android:id="@+id/FoodPostbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="음식" />
        <Button
            android:id="@+id/LifePostbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="생필품" />
        <Button
            android:id="@+id/BorrowPostbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="대여" />
        <Button
            android:id="@+id/WorkPostbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="용역" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/Categorylayout">

    </androidx.recyclerview.widget.RecyclerView>



</RelativeLayout>