<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_505050"
    android:minHeight="?attr/actionBarSize"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    android:id="@+id/toolbar_title_memberinit"
    >

    <ImageView
        android:id="@+id/back_Button"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/back_button_white"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원정보 수정"
        android:layout_gravity="center"
        android:id="@+id/toolbar_titles"
        android:textSize="20sp"
        android:textColor="@color/color_ffffff"
        />

    <Button
        android:id="@+id/UpdateInfo_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수정"
        android:layout_gravity="right"
        android:background="@color/color_505050"
        android:textColor="#ffffff"
        android:shadowRadius="?attr/colorPrimary"
        style="@style/Widget.AppCompat.Button.Borderless"/>


</androidx.appcompat.widget.Toolbar>