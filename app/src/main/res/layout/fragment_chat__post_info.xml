<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <ImageView
        android:id="@+id/Chat_PostInfo_Image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:adjustViewBounds="true"
        android:src="@android:drawable/sym_def_app_icon" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="230dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/Chat_PostInfo_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="포스트 제목"
            android:textSize="22dp"/>
        <TextView
            android:id="@+id/Chat_PostInfo_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:text="포스트 내용"
            android:textSize="17dp"/>
        </LinearLayout>
    <Button
        android:id="@+id/Chat_PostInfo_reservation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="예약"
        android:textSize="15dp"/>

    <LinearLayout
        android:id="@+id/Chat_PostInfo_reservation_LinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:orientation="vertical"
        android:visibility="gone"
        >

        <Button
            android:id="@+id/Chat_PostInfo_reservation_cancel"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="예약 취소"
            android:textSize="10dp"/>

        <Button
            android:id="@+id/Chat_PostInfo_deal_cancel"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="거래 완료"
            android:textSize="10dp"/>

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="370dp"
        android:layout_height="2dp"
        android:paddingTop="10dp"
        android:background="@color/color_Mint"
        android:layout_gravity="center_horizontal"
        />
</LinearLayout>