<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_writepost"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:orientation = "vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/Linearlayout"
                android:id="@+id/Categorylayout"
                android:paddingTop="20dp">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"/>


                <ImageView
                    android:id="@+id/FoodPostbtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/category_food"
                    android:background="@drawable/category_border"/>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/LifePostbtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/category_daily"
                    android:background="@drawable/category_border"/>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/BorrowPostbtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/category_borrow"
                    android:background="@drawable/category_border"/>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/WorkPostbtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/category_work"
                    android:background="@drawable/category_border"/>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"/>

            </LinearLayout>

            <EditText
                android:id="@+id/Market_Title_EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="제목"
                android:inputType="textPersonName" />
            <LinearLayout
                android:id="@+id/contentsLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/Market_Content_EditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ems="10"
                        android:gravity="top"
                        android:hint="내용"
                        android:inputType="textMultiLine" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/PhotoList0"
                    android:scaleType="center"
                    android:layout_width="70dp"
                    android:layout_height="70dp"/>

                <ImageView
                    android:id="@+id/PhotoList1"
                    android:scaleType="center"
                    android:layout_width="70dp"
                    android:layout_height="70dp"/>

                <ImageView
                    android:id="@+id/PhotoList2"
                    android:scaleType="center"
                    android:layout_width="70dp"
                    android:layout_height="70dp"/>
                <ImageView
                    android:id="@+id/PhotoList3"
                    android:scaleType="center"
                    android:layout_width="70dp"
                    android:layout_height="70dp"/>
                <ImageView
                    android:id="@+id/PhotoList4"
                    android:scaleType="center"
                    android:layout_width="70dp"
                    android:layout_height="70dp"/>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <include
        layout="@layout/view_loader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>
</RelativeLayout>