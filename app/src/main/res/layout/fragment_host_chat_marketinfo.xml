<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/color_ededee"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:cardCornerRadius="10dp"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="5dp"
        android:id="@+id/Chat_PostInfo_Card"
        android:visibility="gone">

        <ImageView
            android:id="@+id/Chat_PostInfo_Image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:adjustViewBounds="true"
            android:src="@android:drawable/sym_def_app_icon"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="230dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/Chat_PostInfo_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="포스트 제목"
            android:textSize="22dp"
            android:layout_marginLeft="10dp"
            android:textColor="#505050"/>
        <TextView
            android:id="@+id/Chat_PostInfo_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:text="포스트 내용"
            android:textSize="17dp"
            android:ems="8"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginLeft="10dp"
            android:textColor="#505050"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/color_ededee"
        >

        <Switch
        android:id="@+id/Chat_PostInfo_reservation"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="예약하기"
            android:layout_marginLeft="20dp"
        />

        <Switch
            android:id="@+id/Chat_PostInfo_deal"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="거래완료"
            android:layout_marginLeft="40dp"
            />

<!--        <TextView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:id="@+id/main_label"-->
<!--            android:text="입력한거뜸"/>-->
<!--        <TextView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:id="@+id/selected_review"-->
<!--            android:text="선택한거뜸"/>-->

    </LinearLayout>

</LinearLayout>