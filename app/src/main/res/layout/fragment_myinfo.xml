<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/pager_bg">

    <include
        layout="@layout/view_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/Myinfo_profileImage"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/none_profile_user"
                            app:civ_border_color="#FF000000"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginVertical="15dp"
                            app:civ_border_width="0.5dp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_vertical"
                            >
                            <TextView
                                android:id="@+id/Myinfo_profileNickName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="닉네임"
                                android:textSize="18dp"
                                android:textStyle="bold"
                                android:ems="8"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:textColor="@color/black"
                                />
                            <TextView
                                android:id="@+id/Myinfo_profileUniversity"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="학교"
                                />
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>
                        <Button
                            android:id="@+id/Update_Info_Buutton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="회원정보 변경"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/button_radius"
                            android:textColor="@color/color_505050"
                            />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="340dp"
                        android:layout_height="1dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/color_ededee"
                        android:layout_gravity="center_horizontal"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="3">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:id="@+id/Proceeding_Post"
                            android:background="?attr/selectableItemBackground">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/reserved"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/myinfo_border"/>
                            <TextView
                                android:layout_marginTop="2dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="진행중"
                                android:layout_gravity="center_horizontal"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:id="@+id/Deal_Complete_Post"
                            android:background="?attr/selectableItemBackground">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/completed"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/myinfo_border"/>
                            <TextView
                                android:layout_marginTop="2dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:text="거래완료"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:id="@+id/My_Writen_Post"
                            android:background="?attr/selectableItemBackground">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/writen_post"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/myinfo_border"/>
                            <TextView
                                android:layout_marginTop="2dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:text="내가쓴 게시물"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="340dp"
                    android:layout_height="1dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/color_ededee"
                    android:layout_gravity="center_horizontal"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="20dp">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/review"
                            android:layout_marginLeft="5dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="당신의 리뷰..!"
                            android:textSize="15dp"
                            android:layout_gravity="bottom"
                            android:textStyle="bold"
                            android:layout_marginLeft="10dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:src="@drawable/kind"
                                android:background="@drawable/review_border"
                                android:layout_gravity="center_horizontal"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="친절함"
                                android:textSize="15dp"
                                android:gravity="center_horizontal"
                                android:textColor="#FFBF00"/>
                            <TextView
                                android:id="@+id/Kind_Count"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="X"
                                android:gravity="center_horizontal"
                                android:textSize="20dp"
                                android:textColor="#FFC107"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:src="@drawable/correct"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/review_border"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="정확함"
                                android:gravity="center_horizontal"
                                android:textSize="15dp"
                                android:textColor="#FFC107"/>
                            <TextView
                                android:id="@+id/Correct_Count"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="X"
                                android:gravity="center_horizontal"
                                android:textSize="20dp"
                                android:textColor="#FFC107"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:src="@drawable/complete"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/review_border"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="완벽함"
                                android:gravity="center_horizontal"
                                android:textSize="15dp"
                                android:textColor="#FFC107"/>
                            <TextView
                                android:id="@+id/Complete_Count"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="X"
                                android:gravity="center_horizontal"
                                android:textSize="20dp"
                                android:textColor="#FFC107"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:src="@drawable/bad"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/bad_boreder"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="불쾌함"
                                android:gravity="center_horizontal"
                                android:textSize="15dp"
                                android:textColor="#E91E63"/>
                            <TextView
                                android:id="@+id/Bad_Count"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="X"
                                android:gravity="center_horizontal"
                                android:textSize="20dp"
                                android:textColor="#E91E63"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="340dp"
                            android:layout_height="1dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/color_ededee"
                            android:layout_gravity="center_horizontal"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:orientation="horizontal"
                            android:id="@+id/To_Reviews_written"
                            android:background="?attr/selectableItemBackground">
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="60dp"
                                app:srcCompat="@drawable/writen_review_icon"
                                android:layout_marginLeft="15dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="18dp"
                                android:textStyle="bold"
                                android:layout_marginLeft="10dp"
                                android:gravity="center_vertical"
                                android:text="나에게 작성된 리뷰" />
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="32dp"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"/>
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/side_point"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="20dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
                <RelativeLayout
                    android:layout_width="340dp"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/color_ededee"
                    android:layout_gravity="center_horizontal"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:id="@+id/Announce"
                    android:background="?attr/selectableItemBackground">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="60dp"
                        app:srcCompat="@drawable/announce_icom"
                        android:layout_marginLeft="15dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:text="공지사항" />
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"/>
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/side_point"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="20dp"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="340dp"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/color_ededee"
                    android:layout_gravity="center_horizontal"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:id="@+id/Answer"
                    android:background="?attr/selectableItemBackground">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="60dp"
                        app:srcCompat="@drawable/answer_icon"
                        android:layout_marginLeft="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:text="자주 묻는 질문" />
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"/>
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/side_point"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="20dp"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="340dp"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/color_ededee"
                    android:layout_gravity="center_horizontal"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:id="@+id/App_Setting"
                    android:background="?attr/selectableItemBackground">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="60dp"
                        app:srcCompat="@drawable/setting_icon"
                        android:layout_marginLeft="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:text="앱 설정" />
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"/>
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/side_point"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="20dp"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="340dp"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/color_ededee"
                    android:layout_gravity="center_horizontal"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:id="@+id/LogOut_Button"
                    android:background="?attr/selectableItemBackground">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="60dp"
                        app:srcCompat="@drawable/logout_icon"
                        android:layout_marginLeft="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:text="로그아웃 하기" />
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"/>
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/side_point"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="20dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </ScrollView>

</LinearLayout>